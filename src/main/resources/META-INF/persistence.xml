<persistence xmlns="http://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="bibliotecaPU">
    <class>br.ifpa.model.Aluno</class>
    <class>br.ifpa.model.Publicacao</class>
    <class>br.ifpa.model.Emprestimo</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:~/biblioteca"/>
      <property name="jakarta.persistence.jdbc.user" value="sa"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
